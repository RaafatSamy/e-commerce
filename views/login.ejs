<%- include('parts/header.ejs') %>
<%- include('parts/navbar.ejs') %>


<% if(authError){%>
  <p  style="margin-top: 40px;" class="alert-heading text-center"><strong style="color: red; font-weight:800;font-style: italic;"><%= authError %></strong> </p>
<% } %> 

<div class="container" style="margin-top: 40px; width: 600px;">
    <h3 class="text-center" style="color: green;">Login to your account</h3>
    <form action="/login" method="POST">
        <div class="mb-3">
          <input type="email" name="email" class="form-control" placeholder="E-mail">
          <% let emailError = validationErrors.find(err=>err.param === 'email') %>
          <% if(emailError){ %>
            <p class="alert-heading text-center"><strong style="color: red; font-weight:800;font-style: italic;"><%= emailError.msg %></strong> </p>
            <% } %> 
        </div>
        <div class="mb-3">
          <input type="password"  name="password" class="form-control" placeholder="Password">
          <% let passwordError = validationErrors.find(err=>err.param === 'password') %>
          <% if(passwordError){%>
            <p class="alert-heading text-center"><strong style="color: red; font-weight:800;font-style: italic;"><%= passwordError.msg%></strong> </p>
            <% } %> 
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Login</button>
            <div><small><a href="/signup">you haven't account?</a></small></div>
        </div>
      </form>
      
</div>

<%- include('parts/footer.ejs') %> 