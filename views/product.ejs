<%- include('parts/header.ejs') %>
<%- include('parts/navbar.ejs') %>

<% if(validationErrors){%>
        <div class="container">
            <p style="font-weight:900;margin-top:20px; color:red ;" class="text-center"><%= validationErrors.msg %> </p>
        </div>
    <% } %> 

<div class="container" style="margin-top: 50px;">
    <div class="row">
       <% if(product){ %>
        <div class="col">
            <div class="card-body">
                <h5 class="card-title text-center" ><strong style="color: red; font-weight:800;font-size: 25px;"> <span style="color: black;font-weight: 600;">Product Name  :  </span><%= product.name %> </strong> </h5>
                <h5 style="color: red;font-weight: 800;"class=" text-center"><span style="color: black;font-weight: 600;">Category  :  </span> <%= product.category %> </h5>
                <h6 class="text-center" style="color: green; font-style:italic;font-weight: 800;"> <span style="color: black;font-weight: 600;">Price  :  </span><%= product.price %> $$ </h6>
                <form action="/cart" method="POST">
                      <input type="number" name="amount"  placeholder="Enter your amount" style="margin-bottom: 5px" class="form-control">
                      <input type="hidden" name="name" value="<%= product.name %> ">
                      <input type="hidden" name="price" value="<%= product.price %> ">
                      <input type="hidden" name="productId" value="<%= product._id %> ">
                      <input type="hidden" name="redirectTo" value="/product/<%= product._id%>">
                      <input type="submit" value="Add To Cart" class="btn btn-primary form-control">
                </form>
              </div>
        </div>
        <div class="col">
            <img src="/<%= product.image %> " height="130px" class="card-img-top" alt="...">
           <h6 style="color:red;font-weight:900;">About Product :</h6> 
            <p><%= product.description %> </p>
        </div>
        <div class="container"style="margin-top: 240px">
            <% }else{ %>
                <p style="color: red;font-weight:800" class="text-center">Something went wrong to show Product</p>
        <% } %> 
        </div>
    </div>
</div>


<%- include('parts/footer.ejs') %>